{
  "name": "latexwriter",
  "version": "1.0.1",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev --prefix frontend\" \"electron .\"",
    "build": "npm run build --prefix frontend",
    "start": "npm run build --prefix frontend && electron .",
    "dist": "npm run build --prefix frontend && electron-builder"
  },
  "build": {
    "appId": "com.latexwriter.desktop",
    "productName": "LatexWriter",
    "win": {
      "target": "nsis",
      "icon": "logo.ico"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "prashant1177",
        "repo": "LaTeXWriter-Windows"
      }
    ],
    "extraResources": [
      {
        "from": "tectonic.exe",
        "to": "tectonic.exe"
      }
    ]
  },
  "dependencies": {
    "@google/genai": "^1.17.0",
    "@monaco-editor/react": "^4.7.0",
    "@react-pdf-viewer/core": "^3.12.0",
    "@react-pdf-viewer/default-layout": "^3.12.0",
    "@tailwindcss/vite": "^4.1.11",
    "axios": "^1.10.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^6.30.1",
    "socket.io-client": "^4.8.1",
    "tailwindcss": "^4.1.11",
    "tectonic": "^2.1.2",
    "tmp": "^0.2.5",
    "tmp-promise": "^3.0.3"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "electron": "^31.0.0",
    "electron-builder": "^24.0.0"
  }
}
